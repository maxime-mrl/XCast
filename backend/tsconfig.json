{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES6",
      /* Modules */
      "module": "nodenext",
      "outDir": "./dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Type Checking */
      "strict": true,
  
      /* Completeness */
      "skipLibCheck": true,
      // builds
      "baseUrl": ".",
    },
    "exclude": [
      "./examples/*"
    ]
  }
  