{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES6",
      /* Modules */
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "removeComments": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@*": ["./*"]
      },
      
      /* Type Checking */
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      
      /* Completeness */
      "skipLibCheck": true
    }
  }
  