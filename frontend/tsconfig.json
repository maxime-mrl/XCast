{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"], // Include libraries needed for React and modern JS
    "typeRoots": ["./node_modules/@types", "./types"], // add custom types declaration
    
    /* Modules */
    "module": "esnext", // dynamic imports
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@components": ["./src/components"],
      "@containers": ["./src/containers"],
      "@pages": ["./src/pages"],
      "@context": ["./src/context/DataContext"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/utils/*"],
    },
    
    
    /* Types Checking */
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  },
}
